{
  "rootDir": "./",
  "testEnvironment": "jsdom",
  "setupFiles": ["./jest.setup.js"],
  "setupTestFrameworkScriptFile": "./jest.frameworkSetup.js",
  "testURL": "http://foo.bar/",
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/packages/react-cosmos-webpack/src/__tests__/mocks",
    "/__fsmocks__/"
  ],
  "transformIgnorePatterns": ["/node_modules/(?!react-cosmos.+)"],
  "collectCoverageFrom": [
    "**/src/**/*.{js,jsx}",
    "!**/__fixtures__/**",
    "!**/lib/**",
    "!**/node_modules/**",
    "!**/react-cosmos-voyager/src/use-cases/**"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["lcov", "text"],
  "globals": {
    "fetch": "__GLOBAL_FETCH_MOCK__",
    "COSMOS_CONFIG": {
      "containerQuerySelector": "__mock__containerQuerySelector"
    }
  },
  "moduleNameMapper": {
    "\\.(css|less)$": "identity-obj-proxy",
    "\\.(jpg|png)$": "<rootDir>/packages/__mocks__/img-mock.js"
  }
}
