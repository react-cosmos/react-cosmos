{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // The TS compiler will only emit declaration files. Source is built by
    // Babel for Node modules and by webpack + babel-loader for browser modules
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/__fixtures__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.fixture.ts",
    "**/*.fixture.tsx",
    "**/testHelpers/**"
  ]
}
