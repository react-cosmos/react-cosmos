{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/__fixtures__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.fixture.ts",
    "**/*.fixture.tsx",
    "**/testHelpers/**/*",
    "**/testMocks/**/*"
  ]
}
