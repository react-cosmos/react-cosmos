{
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "prune-react-copies": "node ./scripts/prune-react-copies.js",
    "bootstrap": "lerna bootstrap --npm-client=yarn && yarn run prune-react-copies",
    "install-react": "yarn remove react react-dom && yarn add",
    "install-react:0.14": "yarn run install-react -- react@^0.14.9 react-dom@^0.14.9",
    "install-react:15": "yarn run install-react -- react@^15.5.4 react-dom@^15.5.4",
    "lint": "xo --quiet",
    "start": "./packages/react-cosmos-webpack/bin/cosmos.js --config examples/local-state/cosmos.config.js",
    "build": "node ./scripts/build.js",
    "postinstall": "yarn run bootstrap && yarn run build",
    "publish-lerna": "yarn run test && yarn run build && lerna publish",
    "test-karma": "karma start test/karma.conf.js --single-run",
    "test-jest": "jest --coverage --config test/jest.config.json",
    "test": "yarn run lint && yarn run test-karma && yarn run test-jest",
    "coveralls": "lcov-result-merger 'test/coverage/*/lcov.info' | node_modules/coveralls/bin/coveralls.js",
    "test-smoke": "cypress run",
    "test-smoke-ci": "yarn start & cypress run --record"
  },
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "browserify-optional": "^1.0.0",
    "chai": "^3.5.0",
    "child-process-promise": "^2.2.0",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.1",
    "cypress-cli": "^0.13.1",
    "enzyme": "^2.8.2",
    "eslint-config-xo-react": "^0.12.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-react": "^7.0.0",
    "file-loader": "^0.11.1",
    "glob": "^7.1.1",
    "identity-obj-proxy": "^3.0.0",
    "inject-loader": "^3.0.0",
    "jest": "^20.0.1",
    "jquery": "^3.1.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^1.3.1",
    "karma-webpack": "^2.0.1",
    "lcov-result-merger": "^1.2.0",
    "lerna": "^2.0.0-rc.4",
    "less": "^2.7.1",
    "less-loader": "^4.0.3",
    "mocha": "^3.3.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.5.4",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "style-loader": "^0.17.0",
    "traverse": "^0.6.6",
    "url-loader": "^0.5.7",
    "webpack": "^2.5.1",
    "xo": "^0.18.2",
    "yargs": "^8.0.1"
  },
  "xo": {
    "space": true,
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                ".js",
                ".jsx"
              ]
            }
          }
        }
      },
      "import/extensions": [
        ".js",
        ".jsx"
      ]
    },
    "rules": {
      "comma-dangle": 0,
      "object-curly-spacing": 0,
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 0,
          "maxEOF": 0
        }
      ],
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/order": 0,
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1
    },
    "overrides": [
      {
        "files": [
          "packages/*/src/**/*.{js,jsx}",
          "!**/__tests__/**/*.*"
        ],
        "env": [
          "browser"
        ]
      },
      {
        "files": [
          "packages/react-component-tree/**/*.js"
        ],
        "rules": {
          "import/default": 0,
          "import/named": 0
        }
      },
      {
        "files": [
          "packages/react-cosmos-{config,webpack}/src/**/*.js"
        ]
      },
      {
        "files": [
          "**/__tests__/**/*.{js,jsx}",
          "packages/__mocks__/**/*.js",
          "packages/react-cosmos-telescope/**/*.js"
        ],
        "env": [
          "jest",
          "browser"
        ]
      },
      {
        "files": [
          "packages/react-{component-tree,component-playground}/test/**/*.js",
          "test/helpers/**/*.js"
        ],
        "env": [
          "browser",
          "mocha"
        ],
        "globals": [
          "expect",
          "sinon"
        ],
        "rules": {
          "no-unused-vars": 0,
          "no-unused-expressions": 0,
          "import/no-unresolved": 0,
          "import/named": 0
        }
      },
      {
        "files": "examples/**/*.{js,jsx}",
        "rules": {
          "import/no-unresolved": 0
        }
      },
      {
        "files": [
          "cypress/**/*.{js,jsx}"
        ],
        "env": [
          "mocha"
        ],
        "globals": [
          "cy"
        ]
      }
    ]
  }
}
