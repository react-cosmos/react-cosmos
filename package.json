{
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier --write \"{{packages/*/src,examples,cypress,scripts}/**/,}*.{js,jsx,ts,tsx,css,md}\"",
    "type-check": "tsc",
    "lint": "eslint '**/*.{ts,tsx}'",
    "test:unit": "jest --config .jest/config.js",
    "test:watch": "yarn test:unit --watch",
    "test:coverage": "yarn test:unit --coverage",
    "test:cypress": "cypress run --record false",
    "test:ci": "yarn start & yarn start:export & yarn start:native & yarn test:cypress",
    "babel-ts-node": "babel-node --extensions \".ts,.tsx\"",
    "link-entries": "yarn babel-ts-node ./scripts/linkEntries.ts",
    "src": "yarn link-entries src",
    "dist": "yarn link-entries dist",
    "build:clear": "yarn babel-ts-node ./scripts/clearBuild.ts",
    "build": "yarn babel-ts-node ./scripts/build.ts",
    "export": "yarn babel-ts-node ./packages/react-cosmos/bin/cosmos-export.js --root-dir example",
    "start": "yarn babel-ts-node ./packages/react-cosmos/bin/cosmos.js --root-dir example",
    "start:export": "http-server -p 5001 ./example/cosmos-export",
    "start:native": "yarn babel-ts-node ./packages/react-cosmos/bin/cosmos-native.js --root-dir example --port 5002",
    "start:playground": "yarn babel-ts-node ./packages/react-cosmos/bin/cosmos.js --root-dir packages/react-cosmos-playground2",
    "release:check": "yarn build:clear && yarn build && yarn link-entries src && yarn lint && yarn link-entries dist && yarn test:unit",
    "release:lerna": "lerna publish --registry=https://registry.npmjs.org/",
    "release": "yarn release:check && yarn release:lerna",
    "release:next": "yarn release:check && yarn release:lerna --dist-tag=next"
  },
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.0",
    "@babel/node": "7.5.0",
    "@babel/plugin-proposal-class-properties": "7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.0",
    "@babel/preset-env": "7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@react-mock/state": "^0.1.8",
    "@skidding/async-retry": "^2.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.4",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/micromatch": "^3.1.0",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-is": "^16.7.1",
    "@types/react-test-renderer": "^16.8.2",
    "@types/rimraf": "^2.0.2",
    "@types/slash": "^2.0.0",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "4.1.18",
    "@types/util.promisify": "1.0.1",
    "@types/webpack": "4.4.34",
    "@types/webpack-dev-middleware": "^2.0.3",
    "@types/webpack-dev-server": "^3.1.7",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/parser": "^1.12.0",
    "async-until": "^2.0.0",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.2",
    "codecov": "^3.5.0",
    "cpy": "^7.3.0",
    "create-react-class": "^15.6.3",
    "css-loader": "^3.0.0",
    "cypress": "^3.4.0",
    "delay": "^4.3.0",
    "eslint": "^6.0.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "glob": "^7.1.4",
    "http-server": "^0.11.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.2.0",
    "localforage": "^1.7.3",
    "prettier": "1.18.2",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-test-renderer": "16.9.0-alpha.0",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "yargs": "^13.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dist && lint-staged"
    }
  }
}
