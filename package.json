{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "install-react": "yarn remove react react-dom && yarn add",
    "install-react:0.14": "yarn install-react -- react@^0.14.9 react-dom@^0.14.9",
    "install-react:15": "yarn install-react -- react@^15.5.4 react-dom@^15.5.4",
    "precommit": "lint-staged",
    "prettify": "prettier --write '{{packages/*/src,examples,cypress,scripts}/**/,}*.{js,jsx,css,less,md}'",
    "lint": "xo --quiet",
    "test": "yarn flow && yarn lint && jest --coverage --maxWorkers=4 --config jest.config.json",
    "test:watch": "jest --watch --config jest.config.json",
    "test-smoke": "cypress run",
    "test-smoke-ci": "yarn start & cypress run",
    "start": "babel-node ./packages/react-cosmos/bin/cosmos --config examples/local-state/cosmos.config.js",
    "start:playground": "babel-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground/cosmos.config.js",
    "clear-build": "babel-node ./scripts/clear-build.js",
    "build": "babel-node ./scripts/build.js",
    "link-entries": "babel-node ./scripts/link-entries.js",
    "pre-release": "yarn clear-build && yarn build && yarn link-entries dist && yarn test",
    "lerna-publish": "lerna publish --registry=https://registry.npmjs.org/ --skip-git",
    "release": "yarn pre-release && yarn lerna-publish && yarn post-release",
    "release:next": "yarn pre-release && yarn lerna-publish --npm-tag=next --force-publish=* && yarn post-release",
    "post-release": "yarn link-entries src && babel-node ./scripts/commit-release.js"
  },
  "lint-staged": {
    "*.{js,jsx,css,less}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "after-pending-promises": "^0.0.1",
    "after-pending-timers": "^0.0.1",
    "async-until": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.11.1",
    "chalk": "^2.4.1",
    "child-process-promise": "^2.2.0",
    "codecov": "^3.0.2",
    "create-react-class": "^15.6.3",
    "css-loader": "^0.28.11",
    "cypress": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-react": "^7.9.1",
    "eventsource": "^1.0.5",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.74.0",
    "flow-typed": "^2.4.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "lerna": "^3.0.0-beta.21",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.1.3",
    "prettier": "1.13.5",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-test-renderer": "^16.4.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.5.4",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "xo": "^0.21.1",
    "yargs": "^11.0.0"
  },
  "xo": {
    "space": true,
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "flowtype"
    ],
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                ".js",
                ".jsx"
              ]
            }
          }
        }
      },
      "import/extensions": [
        ".js",
        ".jsx"
      ]
    },
    "rules": {
      "indent": 0,
      "object-curly-spacing": 0,
      "operator-linebreak": 0,
      "capitalized-comments": 0,
      "space-before-function-paren": 0,
      "no-await-in-loop": 0,
      "no-negated-condition": 0,
      "func-names": [
        "error",
        "as-needed"
      ],
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/order": 0,
      "import/default": 0,
      "no-mixed-operators": 0,
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1,
      "flowtype/generic-spacing": 0
    },
    "ignores": [
      "**/__fsmocks__/**",
      "flow-typed/**"
    ],
    "overrides": [
      {
        "files": [
          "packages/*/src/**/*.{js,jsx}",
          "!**/__tests__/**/*.*"
        ],
        "env": [
          "browser"
        ]
      },
      {
        "files": [
          "jest.framework-setup.js",
          "**/__tests__/**/*.{js,jsx}",
          "**/?(*.)test.{js,jsx}",
          "**/__mocks__/**/*.js",
          "packages/react-cosmos-telescope/**/*.js"
        ],
        "env": [
          "jest",
          "browser"
        ]
      },
      {
        "files": [
          "cypress/**/*.{js,jsx}"
        ],
        "env": [
          "mocha"
        ],
        "globals": [
          "cy"
        ]
      }
    ]
  }
}
