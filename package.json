{
  "private": true,
  "workspaces": [
    "packages/*",
    "example",
    "website"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "check-types": "tsc",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "test:unit": "jest --config .jest/config.js",
    "test:watch": "yarn test:unit --watch",
    "test:coverage": "yarn test:unit --coverage",
    "test:cypress": "cypress run --record false",
    "link-entries": "ts-node ./scripts/linkEntries.ts",
    "src": "yarn link-entries src",
    "dist": "yarn link-entries dist",
    "build:clear": "ts-node ./scripts/clearBuild.ts",
    "build": "ts-node ./scripts/build.ts",
    "start": "yarn cosmos --root-dir example",
    "export": "yarn cosmos-export --root-dir example",
    "start:export": "http-server -p 5001 ./example/cosmos-export",
    "start:native": "yarn cosmos-native --root-dir example --port 5002",
    "start:playground": "yarn cosmos --root-dir packages/react-cosmos/src/playground",
    "website:start": "yarn cosmos --root-dir website",
    "website:build": "ts-node ./scripts/buildWebsite.ts",
    "website:serve": "http-server -p 5001 ./website/dist",
    "release:check": "yarn build:clear && yarn build && yarn src && yarn lint && yarn dist && yarn test:unit",
    "release:lerna": "lerna publish --registry=https://registry.npmjs.org/",
    "release": "yarn release:check && yarn release:lerna",
    "release:next": "yarn release:check && yarn release:lerna --dist-tag=next"
  },
  "devDependencies": {
    "@react-mock/state": "^0.1.8",
    "@skidding/async-retry": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/express": "4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/fuzzaldrin-plus": "^0.6.2",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.178",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.23",
    "@types/pem": "^1.9.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-is": "^17.0.3",
    "@types/react-native": "^0.64.10",
    "@types/react-test-renderer": "^17.0.1",
    "@types/rimraf": "^3.0.2",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.35",
    "@types/styled-components": "^5.1.20",
    "@types/url-parse": "^1.4.6",
    "@types/util.promisify": "1.0.4",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-middleware": "^4.3.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@types/yargs": "^16.0.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "async-until": "^3.0.0",
    "chalk": "4.1.2",
    "codecov": "^3.8.3",
    "cpy": "^8.1.2",
    "cpy-cli": "^3.1.1",
    "create-react-class": "^15.7.0",
    "css-loader": "^5.2.6",
    "cypress": "^8.7.0",
    "delay": "^5.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^0.12.3",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "jest-styled-components": "^7.1.1",
    "lerna": "^4.0.0",
    "localforage": "^1.10.0",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "17.0.2",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "styled-components": "^5.3.3",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.7.0",
    "typescript": "4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yargs": "^17.3.1"
  }
}
