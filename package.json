{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "install-react": "yarn remove react react-dom && yarn add",
    "install-react:0.14": "yarn install-react -- react@^0.14.9 react-dom@^0.14.9",
    "install-react:15": "yarn install-react -- react@^15.5.4 react-dom@^15.5.4",
    "prettify": "prettier --write '{{{packages,examples}/*/src,cypress,scripts}/**/,}*.{js,jsx,css,less}'",
    "lint": "xo --quiet",
    "start": "./examples/local-state/node_modules/.bin/cosmos --config examples/local-state/cosmos.config.js",
    "start:playground": "./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground/cosmos.config.js",
    "build": "node ./scripts/build.js",
    "postinstall": "yarn build",
    "publish-lerna": "yarn test && yarn build && lerna publish --registry=https://registry.npmjs.org/",
    "test": "yarn lint && jest --coverage --maxWorkers=4 --config jest.config.json",
    "test:watch": "jest --watch --config jest.config.json",
    "coveralls": "cat coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
    "test-smoke": "cypress run",
    "test-smoke-ci": "yarn start & cypress run",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,less}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "after-pending-promises": "^0.0.1",
    "after-pending-timers": "^0.0.1",
    "async-until": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.11.1",
    "child-process-promise": "^2.2.0",
    "coveralls": "^3.0.0",
    "create-react-class": "^15.6.2",
    "css-loader": "^0.28.5",
    "cypress": "^1.0.3",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "eslint-config-xo-react": "^0.15.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-react": "^7.6.0",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.65.0",
    "flow-typed": "^2.2.3",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.4",
    "lerna": "^2.5.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^6.0.0",
    "prettier": "1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-test-renderer": "^16.1.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "xo": "^0.18.2",
    "yargs": "^11.0.0"
  },
  "xo": {
    "space": true,
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                ".js",
                ".jsx"
              ]
            }
          }
        }
      },
      "import/extensions": [
        ".js",
        ".jsx"
      ]
    },
    "rules": {
      "indent": 0,
      "object-curly-spacing": 0,
      "operator-linebreak": 0,
      "capitalized-comments": 0,
      "space-before-function-paren": 0,
      "no-await-in-loop": 0,
      "no-negated-condition": 0,
      "func-names": [
        "error",
        "as-needed"
      ],
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/order": 0,
      "no-mixed-operators": 0,
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1
    },
    "ignores": [
      "**/__fsmocks__/**",
      "flow-typed/**"
    ],
    "overrides": [
      {
        "files": [
          "packages/*/src/**/*.{js,jsx}",
          "!**/__tests__/**/*.*"
        ],
        "env": [
          "browser"
        ]
      },
      {
        "files": [
          "jest.framework-setup.js",
          "**/__tests__/**/*.{js,jsx}",
          "**/__mocks__/**/*.js",
          "packages/react-cosmos-telescope/**/*.js"
        ],
        "env": [
          "jest",
          "browser"
        ]
      },
      {
        "files": "examples/**/*.{js,jsx}",
        "rules": {
          "import/no-unresolved": 0
        }
      },
      {
        "files": [
          "cypress/**/*.{js,jsx}"
        ],
        "env": [
          "mocha"
        ],
        "globals": [
          "cy"
        ]
      }
    ]
  }
}
