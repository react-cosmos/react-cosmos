{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "install-react": "yarn remove react react-dom && yarn add",
    "install-react:0.14": "yarn install-react -- react@^0.14.9 react-dom@^0.14.9",
    "install-react:15": "yarn install-react -- react@^15.5.4 react-dom@^15.5.4",
    "precommit": "yarn dist && lint-staged",
    "prettify": "prettier --write \"{{packages/*/src,examples,cypress,scripts}/**/,}*.{js,jsx,css,less,md}\"",
    "lint": "eslint \"**/*.js\"",
    "test:unit": "jest --config .jest/config.js",
    "test:watch": "yarn test:unit --watch",
    "test": "yarn flow && yarn lint && yarn test:unit --coverage",
    "test:e2e": "cypress run",
    "start": "babel-node ./packages/react-cosmos/bin/cosmos --config examples/local-state/cosmos.config.js",
    "start:next": "babel-node ./packages/react-cosmos/bin/cosmos --config examples/jsx-fixtures/cosmos.config.js",
    "start:playground": "babel-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground/cosmos.config.js",
    "start:playground:next": "babel-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground2/cosmos.config.js",
    "build:clear": "babel-node ./scripts/clear-build.js",
    "build": "babel-node ./scripts/build.js",
    "link-entries": "babel-node ./scripts/link-entries.js",
    "src": "yarn link-entries src",
    "dist": "yarn link-entries dist",
    "release:check": "yarn link-entries src && yarn flow && yarn lint && yarn build && yarn link-entries dist && yarn test:unit",
    "release:lerna": "lerna publish --registry=https://registry.npmjs.org/",
    "release": "yarn release:check && yarn release:lerna",
    "release:next": "yarn release:check && yarn release:lerna --npm-tag=next"
  },
  "lint-staged": {
    "*.{js,jsx,css,less}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime-corejs2": "^7.0.0",
    "after-pending-promises": "^0.0.1",
    "after-pending-timers": "^0.0.1",
    "async-until": "^1.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.2",
    "chalk": "^2.4.1",
    "child-process-promise": "^2.2.0",
    "codecov": "^3.0.4",
    "cpy": "^7.0.1",
    "create-react-class": "^15.6.3",
    "css-loader": "^1.0.0",
    "cypress": "^3.1.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.5.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "eventsource": "^1.0.7",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.80.0",
    "flow-typed": "^2.5.1",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "lerna": "^3.3.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.2",
    "prettier": "1.14.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-native": "^0.55.4",
    "react-test-renderer": "^16.4.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.5.4",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "yargs": "^12.0.1"
  }
}
