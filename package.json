{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier --write \"{{packages/*/src,examples,cypress,scripts}/**/,}*.{js,jsx,ts,tsx,css,less,md}\"",
    "lint": "tslint --project tsconfig.json",
    "test:unit": "jest --config .jest/config.js",
    "test:watch": "yarn test:unit --watch",
    "test:coverage": "yarn test:unit --coverage",
    "test:smoke": "cypress run --record false",
    "start": "ts-node ./packages/react-cosmos/bin/cosmos.js --config examples/jsx-fixtures/cosmos.config.js",
    "start:playground": "ts-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground2/cosmos.config.js",
    "build:clear": "ts-node ./scripts/clearBuild.ts",
    "build": "ts-node ./scripts/build.ts",
    "link-entries": "ts-node ./scripts/linkEntries.ts",
    "src": "yarn link-entries src",
    "dist": "yarn link-entries dist",
    "release:check": "yarn build:clear && yarn build && yarn link-entries src && yarn lint && yarn link-entries dist && yarn test:unit",
    "release:lerna": "lerna publish --registry=https://registry.npmjs.org/",
    "release": "yarn release:check && yarn release:lerna",
    "release:next": "yarn release:check && yarn release:lerna --dist-tag=next"
  },
  "devDependencies": {
    "@react-mock/state": "^0.1.8",
    "@skidding/async-retry": "^2.0.0",
    "@types/child-process-promise": "^2.2.1",
    "@types/debug": "^4.1.3",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/micromatch": "^3.1.0",
    "@types/open": "^6.0.0",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/react-is": "^16.7.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/resolve-from": "^4.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/slash": "^2.0.0",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^4.1.13",
    "@types/util.promisify": "^1.0.0",
    "@types/webpack": "^4.4.27",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-dev-server": "^3.1.5",
    "@types/webpack-hot-middleware": "^2.16.5",
    "@types/yargs": "^12.0.11",
    "async-until": "^2.0.0",
    "chalk": "^2.4.2",
    "child-process-promise": "^2.2.0",
    "codecov": "^3.3.0",
    "cpy": "^7.2.0",
    "create-react-class": "^15.6.3",
    "cypress": "^3.2.0",
    "delay": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-native": "^0.55.4",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "yargs": "^13.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,css,less}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dist && lint-staged"
    }
  }
}
