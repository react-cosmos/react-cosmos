{
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "prune-react-copies": "node ./scripts/prune-react-copies.js",
    "bootstrap": "lerna bootstrap && npm run prune-react-copies",
    "install-react": "rm -rf node_modules/react{,-dom,-addons-test-utils} && npm install",
    "install-react:0.13": "npm run install-react -- react@0.13",
    "install-react:0.14": "npm run install-react -- react@0.14 react-dom@0.14 react-addons-test-utils@0.14",
    "install-react:15": "npm run install-react -- react@15 react-dom@15 react-addons-test-utils@15",
    "lint": "xo --quiet",
    "build-babel": "babel -D --ignore '__tests__,__mocks__' packages/$PACKAGE/src -d packages/$PACKAGE/lib",
    "build-webpack": "webpack --config packages/$PACKAGE/webpack.config.js",
    "build": "node ./scripts/build.js",
    "prepublish": "npm run bootstrap && npm run build",
    "publish-lerna": "npm run test && npm run build && lerna publish",
    "test-karma": "karma start test/karma.conf.js --single-run",
    "test-jest": "jest --coverage --config test/jest.config.json",
    "test": "npm run lint && npm run test-karma && npm run test-jest",
    "coveralls": "lcov-result-merger 'test/coverage/*/lcov.info' | node_modules/coveralls/bin/coveralls.js"
  },
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "browserify-optional": "^1.0.0",
    "chai": "^3.5.0",
    "child-process-promise": "^2.2.0",
    "coveralls": "^2.11.12",
    "css-loader": "^0.26.1",
    "enzyme": "^2.4.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "glob": "^7.1.1",
    "inject-loader": "^2.0.1",
    "jest": "^18.1.0",
    "jquery": "^3.1.0",
    "karma": "^1.2.0",
    "karma-chai": "^0.1.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^1.2.3",
    "karma-webpack": "^2.0.1",
    "lcov-result-merger": "^1.2.0",
    "lerna": "2.0.0-beta.33",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.0.2",
    "react": ">=0.13 <16",
    "react-addons-test-utils": "<16",
    "react-dom": "<16",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "traverse": "^0.6.6",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "xo": "^0.17.1",
    "yargs": "^6.6.0"
  },
  "xo": {
    "space": true,
    "plugins": [
      "react"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                ".js",
                ".jsx"
              ]
            }
          }
        }
      },
      "import/extensions": [
        ".js",
        ".jsx"
      ]
    },
    "rules": {
      "comma-dangle": 0,
      "object-curly-spacing": 0,
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 0,
          "maxEOF": 0
        }
      ],
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1
    },
    "overrides": [
      {
        "files": [
          "packages/*/src/**/*.{js,jsx}",
          "!**/__tests__/**/*.*"
        ],
        "env": [
          "browser"
        ]
      },
      {
        "files": [
          "packages/react-component-tree/**/*.js"
        ],
        "rules": {
          "import/default": 0,
          "import/named": 0
        }
      },
      {
        "files": [
          "packages/react-cosmos-{config,webpack}/src/**/*.js"
        ],
        "rules": {
          "import/no-dynamic-require": 0
        }
      },
      {
        "files": [
          "**/__tests__/**/*.{js,jsx}",
          "packages/__mocks__/**/*.js"
        ],
        "env": [
          "jest",
          "browser"
        ],
        "rules": {
          "import/no-extraneous-dependencies": 0
        }
      },
      {
        "files": [
          "packages/react-{dom-polyfill,component-tree,component-playground}/test/**/*.js",
          "test/helpers/**/*.js"
        ],
        "env": [
          "browser",
          "mocha"
        ],
        "globals": [
          "expect",
          "sinon"
        ],
        "rules": {
          "no-unused-vars": 0,
          "no-unused-expressions": 0,
          "import/no-unresolved": 0,
          "import/no-extraneous-dependencies": 0,
          "import/no-dynamic-require": 0,
          "import/named": 0
        }
      },
      {
        "files": "examples/**/*.{js,jsx}",
        "rules": {
          "import/no-unresolved": 0
        }
      }
    ]
  }
}
