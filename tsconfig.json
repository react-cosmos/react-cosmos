// This config is used in multiple ways:
// 1. Used by code editors. All TS config, aside from build parameters, should
//    be placed here.
// 2. Extended by specific package build configs used to generate TS
//    declarations. Those configs have an "outDir" defined.
// 3. Used by global type-check command (which runs in CI)
{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    // The TS compiler will only emit declaration files. Build is generated by
    // Babel for Node modules and by webpack + babel-loader for browser modules
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
